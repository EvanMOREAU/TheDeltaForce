{% extends 'baseAdmin.html.twig' %}

{% block body %}
	<body class="vertical-layout vertical-compact-menu 2-columns   menu-expanded fixed-navbar" data-open="click" data-menu="vertical-compact-menu" data-col="2-columns">
			<!-- Page Preloder -->
	<div id="preloder">
		<div class="loader"></div>
	</div>

	<!-- Page info section -->
	<section class="page-info-section set-bg" data-setbg="/assets/img/slider-1.png">
		<div class="pi-content">
			<div class="container">
				<div class="row">
					<div class="col-xl-5 col-lg-6 text-white">
						<h2>Article</h2>
						<p>Les articles permettent de décrire certains évènements ou action que l'on réalise.</p>
					</div>
				</div>
			</div>
		</div>
	</section>
        <div class="app-content content">
			<div class="content-wrapper">
				<div class="content-header row">
					<div class="content-header-left col-md-12 col-12 mb-2 breadcrumb-new">
						<h3 class="content-header-title mb-0 d-inline-block">Mon Compte</h3>
						<div class="row breadcrumbs-top d-inline-block">
							<div class="breadcrumb-wrapper col-12">
								<ol class="breadcrumb">
									<li class="breadcrumb-item">
										<a href="index.html">Dashboard</a>
									</li>
									<li class="breadcrumb-item active">Mon compte
									</li>
								</ol>
							</div>
						</div>
					</div>  
				</div>
				<div class="content-body">
					<div class="row">
						<div
							class="col-12 col-md-12">
							<!-- User Profile -->
							<section class="card">
                                <div class="card-content">
                                    <div class="card-body">
                                        <div class="col-12">
                                            <div class="row">
                                                <div class="col-md-2 col-12">
                                                    <img src="/uploads/images/{{app.user.img}}" class="rounded-circle height-200" alt="Card image"/>
                                                </div>
                                                <div class="col-md-10 col-12">
                                                    <div class="row">
                                                        <div class="col-12 col-md-6">
                                                            <p class="text-bold-700 text-uppercase mb-0">Dernière connexion</p>
                                                            <p class="mb-0">{{ app.user.LastConnection|date('d/m/Y H:i:s') }}</p>
                                                        </div>
                                                        <div class="col-12 col-md-6">
                                                            <p class="text-bold-700 text-uppercase mb-0">Adresse IP</p>
                                                            <p class="mb-0">{{ UserIP }}</p>
                                                        </div>
                                                    </div>
                                                    <hr/>
                                                    {{ form_start(form) }}
                                                    <form class="form-horizontal form-user-profile row mt-2">
                                                        {{ form_widget(form._token) }}
                                                        <div class="row">
                                                            <div class="col-6">
                                                                <fieldset class="form-label-group">
                                                                    {{ form_widget(form.email) }}
                                                                    <label for="email-address">Email</label>
                                                                </fieldset>
                                                            </div>
                                                            <div class="col-6">
                                                                <fieldset class="form-label-group">
                                                                    {{ form_widget(form.discordName) }}
                                                                    <label for="discord-name">Pseudo Discord</label>
                                                                </fieldset>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-6">
                                                                <fieldset class="form-label-group">
                                                                    {{ form_widget(form.userName) }}
                                                                    <label for="user-name">Pseudo</label>
                                                                </fieldset>
                                                            </div>
                                                            <div class="col-6">
                                                                <fieldset class="form-label-group">
                                                                    {{ form_widget(form.password) }}
                                                                    <label for="img">Ancien mot de passe</label>
                                                                </fieldset>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                             <div class="col-6">
                                                                <fieldset class="form-label-group">
                                                                    {{ form_widget(form.plainPassword.first) }}
                                                                    <label for="new-password">Nouveau mot de passe</label>
                                                                </fieldset>
                                                            </div>
                                                            <div class="col-6">
                                                                <fieldset class="form-label-group">
                                                                    {{ form_widget(form.plainPassword.second) }}
                                                                    <label for="repeat-password">Répetez votre nouveau mot de passe</label>
                                                                </fieldset>
                                                            </div>
                                                        </div>
                                                         {{ form_widget(form.img) }}
                                                        <div class="col-12 text-right">
                                                            <button type="submit" class="btn-gradient-primary my-1">Save</button>
                                                        </div>
                                                    </form>
                                                    {{ form_end(form) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </section>
						</div>
					</div>
				</div>
			</div>
		</div>

		<!-- ////////////////////////////////////////////////////////////////////////////-->
    </body>
{% endblock %}
