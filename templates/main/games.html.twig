{% extends 'base.html.twig' %}

{% block title %}The Delta Force{% endblock %}

{% block body %}
<!DOCTYPE html>
<html lang="zxx">
<head>
	<title>The Delta Force</title>
	<meta charset="UTF-8">
	<meta name="description" content="The Delta Force">
	<meta name="keywords" content="the, delta, force, deltaforce, team, arma, armareforger, thedelta, thedeltaforce, squad, rp, milsim, military">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<!-- Favicon -->   
	

	<!-- Google Fonts -->
	<link href="https://fonts.googleapis.com/css?family=Roboto:400,400i,500,500i,700,700i" rel="stylesheet">

	<!-- Stylesheets -->
	<link rel="stylesheet" href="assets/css/bootstrap.min.css"/>
	<link rel="stylesheet" href="assets/css/font-awesome.min.css"/>
	<link rel="stylesheet" href="assets/css/owl.carousel.css"/>
	<link rel="stylesheet" href="assets/css/style.css"/>
	<link rel="stylesheet" href="assets/css/animate.css"/>


	<!--[if lt IE 9]>
	  <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
	  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
	<![endif]-->

</head>
<body>
	<!-- Page Preloder -->
	<div id="preloder">
		<div class="loader"></div>
	</div>

	<!-- Page info section -->
	<section class="page-info-section set-bg" data-setbg="/assets/img/slider-2.png">
		<div class="pi-content">
			<div class="container">
				<div class="row">
					<div class="col-xl-5 col-lg-6 text-white">
						<h2>Tout nos jeux</h2>
						<p>Cette liste reste exhaustive. Certains de nos membres jouent évidemment à d'autres jeux.</p>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- Page info section -->

	<!-- Latest news section -->
	<div class="latest-news-section">
		<div class="ln-title">Dernières nouvelles</div>
		<div class="news-ticker">
			<div class="news-ticker-contant">
				{% for n in news %}
					<div class="nt-item"><span style="background-color: {{ n.tag.color }};">{{n.tag.name}}</span>{{ n.description }}</div>
				{% endfor %}
			</div>
		</div>
	</div>
	<!-- Latest news section end -->

	<!-- Page section -->
	<section class="page-section review-page spad">
		<div class="container">
			<div class="row">
				{% for g in games %}
				<div class="col-md-6">
					<div class="review-item">
						<div class="review-cover set-bg" data-setbg="/uploads/images/{{g.img2}}">
						</div>
						<div class="review-text">
							<h4>{{ g.name }}</h4>
							<p>{{ g.description }}</p>
						</div>
					</div>
				</div>
				{% endfor %}
			</div>
			{# <div class="text-center pt-4">
				<button class="site-btn btn-sm">Load More</button>
			</div> #}
		</div>
	</section>
	<!-- Page section end -->


	<!-- Review section -->
	<section class="review-section review-dark spad set-bg" data-setbg="assets/img/review-bg-2.jpg">
		<div class="container">
			<div class="section-title text-white">
				<h2>Ajout récent</h2>
			</div>
			<div class="row text-white">
				{% for g in topGames %}
				<div class="col-lg-3 col-md-6">
					<div class="review-item">
						<div class="review-cover set-bg" data-setbg="/uploads/images/{{g.img}}">
						</div>
						<div class="review-text">
							<h5>{{g.name}}</h5>
							<p>{{g.description}}</p>
						</div>
					</div>
				</div>
			{% endfor %}
			</div>
		</div>
	</section>

	<!--====== Javascripts & Jquery ======-->
	<script src="assets/js/jquery-3.2.1.min.js"></script>
	<script src="assets/js/bootstrap.min.js"></script>
	<script src="assets/js/owl.carousel.min.js"></script>
	<script src="assets/js/jquery.marquee.min.js"></script>
	<script src="assets/js/main.js"></script>
    </body>
</html>
{% endblock %}
